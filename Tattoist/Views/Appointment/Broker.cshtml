@model List<TattoistDAL.Models.Entities.Broker>

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="kt-portlet kt-portlet--last kt-portlet--head-lg kt-portlet--responsive-mobile" id="kt_page_portlet">
                @using (Html.BeginForm("Broker", "Appointment"))
                {
                    <div class="kt-portlet__head kt-portlet__head--lg" style="">
                        <div class="kt-portlet__head-label d-flex">
                            <span class="kt-portlet__head-icon">
                                <i class="kt-font-brand flaticon2-calendar-2"></i>
                            </span>
                            <h3 class="kt-portlet__head-title">
                                Aracı
                            </h3>
                        </div>
                        <div class="kt-portlet__head-toolbar">
                            <a href="/Home/HomePage" class="btn btn-clean kt-margin-r-10">
                                <i class="la la-arrow-left"></i>
                                <span class="kt-hidden-mobile">Geri Dön</span>
                            </a>
                            <div class="btn-group">
                                <button type="submit" class="btn btn-brand" name="brokerid" id="brokerid" value="">
                                    <i class="flaticon2-add"></i>
                                    <span class="kt-hidden-mobile">Kaydet</span>
                                </button>
                            </div>
                        </div>

                    </div><br />
                    if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger justify-content-center" role="alert">
                            <strong>HATA!</strong>&nbsp; @ViewBag.Error
                        </div>
                    }
                    if (ViewBag.success != null)
                    {
                        <div class="alert alert-success justify-content-center" role="alert">
                            <strong>BAŞARILI!</strong>&nbsp; @ViewBag.success
                        </div>
                    }

                    <div style="margin-left:15px" class="row">
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Aracı Ünvanı</b></p>
                            <input id="Title" name="Title" class="form-control" type="text">
                        </div>
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Alacağı Yüzde</b></p>
                            <input id="Percent" name="Percent" class="form-control" type="text">
                        </div>
                    </div>

                    <div style="margin-left: 15px; margin-top: 15px" class="row">
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>İlgili Kişi</b></p>
                            <input id="RelatedPerson" name="RelatedPerson" class="form-control" type="text">
                        </div>
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Telefon</b></p>
                            <input id="Phone" name="Phone" onkeypress="return OnlyNumber(event)" class="form-control" type="text" maxlength="11" placeholder="(555)-555-5555">
                        </div>
                    </div>
                    <div style="margin-left: 15px; margin-top: 15px" class="row">
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Ödeme Tipi</b></p>
                            <input type="checkbox" id="PaymentType" name="PaymentType" data-toggle="switch" data-on-color="primary" data-on-text="IBAN" data-off-color="default" data-off-text="HESAP NO"  onchange="check()" checked>
                        </div>

                        <div id="diviban" style="margin-left:15px;" class="col-md-5">
                            <p><b>Iban İle Ödeme</b></p>
                            <input id="Iban" name="Iban" class="form-control" type="text">
                        </div>

                        <div id="divaccount" style="margin-left: 15px; display: none" class="col-md-6 row">
                            <p><b>Hesap No İle Ödeme</b></p>
                            <div class="col-md-4"></div>
                            <div class="col-md-4"></div>

                            <div class="col-md-4">
                                <div class="kt-form__label">
                                    <label>Hesap No</label>
                                </div>
                                <input id="Account" name="Account" class="form-control" type="text">
                            </div>
                            <div class="col-md-4">
                                <div class="kt-form__label">
                                    <label>Şube No</label>
                                </div>
                                <input id="Branch" name="Branch" class="form-control" type="text">
                            </div>
                            <div class="col-md-4">
                                <div class="kt-form__label">
                                    <label>Banka Adı</label>
                                </div>
                                <input id="BankName" name="BankName" class="form-control" type="text">
                            </div>
                        </div>
                    </div>
                    <div style="margin-top:15px" class="row">
                    </div>
                }
                @if (Model != null)
                {
                    <div class="kt-portlet__body">
                        <div id="kt_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-sm-12">
                                <table class="table table-striped- table-bordered table-hover table-checkable responsive no-wrap dataTable dtr-inline collapsed" id="tabtab" role="grid" aria-describedby="kt_table_1_info" style="width: 883px;">
                                    <thead role="row">
                                        <tr class="tableHead">
                                            <th>
                                                Aracı Ünvanı
                                            </th>
                                            <th>
                                                Aracı Telefon
                                            </th>
                                            <th>
                                                Aracı Alacağı Yüzde
                                            </th>
                                            <th>
                                                İlgili Kişi
                                            </th>
                                            <th>
                                                Ödeme Tipi
                                            </th>
                                            <th>
                                                IBAN
                                            </th>
                                            <th>
                                                Hesap Numarası
                                            </th>
                                            <th>
                                                Şube Kodu
                                            </th>
                                            <th>
                                                Banka Adı
                                            </th>
                                            <th>
                                                Aksiyon
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(x => item.BrokerTitle)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(x => item.BrokerPhone)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(x => item.BrokerPercent)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(x => item.RelatedPerson)
                                                </td>
                                                @if (item.PaymentType == true)
                                                {
                                                    <td>
                                                        IBAN ile
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(x => item.Iban)
                                                    </td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        Hesap Numarası İle
                                                    </td>
                                                    <td></td>
                                                    <td>
                                                        @Html.DisplayFor(x => item.AccountNumber)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(x => item.BranchCode)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(x => item.BankName)
                                                    </td>
                                                }
                                            <td>
                                                <button onclick="EditBroker(this.value);" class="btn btn-dark kt-margin-r-10" value="@item.BrokerId">
                                                    <i class="la la-edit"></i>
                                                    <span class="kt-hidden-mobile"></span>
                                                </button>
                                                <a href="/Appointment/BrokerDelete?id=@item.BrokerId" class="btn btn-danger kt-margin-r-10">
                                                    <i class="la la-remove"></i>
                                                    <span class="kt-hidden-mobile"></span>
                                                </a>
                                            </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                else
                {
                    <div>
                        <h1 class="kt-font-success" style="text-align:center">Listelenecek Veri Yok...</h1>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
@section css{
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/assets/js/pages/crud/forms/widgets/bootstrap-switch.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/assets/js/SiteJS.js"></script>
    <script>
        $("[name='PaymentType']").bootstrapSwitch();

        function check() {
            var on = $('.bootstrap-switch-on');
            var iban = $('#diviban');
            var account = $('#divaccount');

            if (on.length == 0) {
                $('#Iban').val('');
                iban.hide();
                account.show();
            }
            else {
                account.hide();
                $('#Account').val('');
                $('#Branch').val('');
                $('#BankName').val('');
                iban.show();
            }
        }


        function EditBroker(val) {

            $.ajax({
                url: '/Ajax/GetBroker',
                type: 'GET',
                data: { jsonData: val },
                dataType: 'json',
                success: function (response) {
                    if (response != null) {

                        $('#Title').val(response.BrokerTitle);
                        $('#Percent').val(response.BrokerPercent);
                        $('#RelatedPerson').val(response.RelatedPerson);
                        $('#Phone').val(response.BrokerPhone);

                        if (response.PaymentType == true) {
                            $("[name='PaymentType']").bootstrapSwitch('state', true);
                            $('#Iban').val(response.Iban);
                        }
                        else {
                            $("[name='PaymentType']").bootstrapSwitch('state', false);
                            $('#Account').val(response.AccountNumber);
                            $('#Branch').val(response.BranchCode);
                            $('#BankName').val(response.BankName);
                        }

                        $('#brokerid').val(response.BrokerId);
                    }
                }
            });
        };
    </script>
}