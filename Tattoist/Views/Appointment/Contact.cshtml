@model List<TattoistDAL.Models.Entities.Customer>

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="kt-portlet kt-portlet--last kt-portlet--head-lg kt-portlet--responsive-mobile" id="kt_page_portlet">
                @using (Html.BeginForm("Contact", "Appointment"))
                {
                    <div class="kt-portlet__head kt-portlet__head--lg" style="">
                        <div class="kt-portlet__head-label d-flex">
                            <span class="kt-portlet__head-icon">
                                <i class="kt-font-brand flaticon2-calendar-2"></i>
                            </span>
                            <h3 class="kt-portlet__head-title">
                                Müşteriler
                            </h3>
                        </div>
                        <div class="kt-portlet__head-toolbar">
                            <a href="/Home/HomePage" class="btn btn-clean kt-margin-r-10">
                                <i class="la la-arrow-left"></i>
                                <span class="kt-hidden-mobile">Geri Dön</span>
                            </a>
                            <button type="button" class="btn btn-warning kt-margin-r-10" data-toggle="modal" data-target="#uploadcsv">
                                <i class="fas fa-file-csv"></i>
                                <span class="kt-hidden-mobile"></span>CSV Yükle
                            </button>

                            <div class="btn-group">
                                <button type="submit" class="btn btn-brand" name="customerid" id="customerid" value="">
                                    <i class="flaticon2-add"></i>
                                    <span class="kt-hidden-mobile">Kaydet</span>
                                </button>
                            </div>
                        </div>
                    </div><br />


                    if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger justify-content-center" role="alert">
                            <strong>HATA!</strong>&nbsp; @TempData["Error"]
                        </div>
                    }
                    if (TempData["Success"] != null)
                    {
            <div class="alert alert-success justify-content-center" role="alert">
                <strong>BAŞARILI!</strong>&nbsp; @TempData["Success"]
            </div>
                    }

                    <div style="margin-left:15px" class="row">
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Müşteri Adı Soyadı</b></p>
                            <input id="fullname" name="fullname" class="form-control" type="text">
                        </div>
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Telefon</b></p>
                            <input id="phone" name="phone" onkeypress="return OnlyNumber(event)" class="form-control" type="text" maxlength="11" placeholder="(555)-555-5555">
                        </div>
                    </div>
                    <div style="margin-left:15px" class="row">
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Doğum Tarihi</b></p>
                            <div class="datepicker-switch">
                                <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="birthdate" name="birthdate" class="form-control" format="yyyy-MM-dd" required />
                            </div>
                        </div>
                    </div>
                }
                @if (Model != null)
                {
                    <div class="kt-portlet__body">
                        <div id="kt_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-sm-12">
                                <table class="table table-striped- table-bordered table-hover table-checkable responsive no-wrap dataTable dtr-inline collapsed" id="tabtab" role="grid" aria-describedby="kt_table_1_info" style="width: 883px;">
                                    <thead role="row">
                                        <tr class="tableHead">
                                            <th>
                                                Müşteri Adı Soyadı
                                            </th>
                                            <th>
                                                Müşteri Telefon Numarası
                                            </th>
                                            <th>Müşteri Doğum Tarihi</th>
                                            <th>
                                                Aksiyon
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(x => item.CustomerName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(x => item.CustomerPhone)
                                                </td>
                                                <td>
                                                    @{
                                                        string date = item.CustomerBirthday.ToShortDateString();
                                                    }
                                                    @date
                                                </td>
                                                <td>
                                                    <button onclick="EditCustomer(this.value);" class="btn btn-dark kt-margin-r-10" value="@item.CustomerId">
                                                        <i class="la la-edit"></i>
                                                        <span class="kt-hidden-mobile"></span>
                                                    </button>
                                                    <a href="/Appointment/ContactDelete?id=@item.CustomerId" class="btn btn-danger kt-margin-r-10">
                                                        <i class="la la-remove"></i>
                                                        <span class="kt-hidden-mobile"></span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                else
                {
                    <div>
                        <h1 class="kt-font-success" style="text-align:center">Listelenecek Veri Yok...</h1>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="modal fade" id="uploadcsv" tabindex="-1" role="dialog" aria-labelledby="uploadcsvModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadcsvModalTitle">CSV YÜKLE</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("UploadCSV", "Home", FormMethod.Post, new { @class = "dropzone", @id = "my-awesome-dropzone", enctype = "multipart/form-data" }))
                {
                    <div class="modal-body">
                        <input type="file" name="file" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-dark" id="upload">Yükle</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
@section css{
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/assets/js/notiflix.js"></script>
    <script>
        function OnlyNumber(evt) {
            var iKeyCode = evt.which ? evt.which : evt.keyCode;
            if ((iKeyCode >= 48 && iKeyCode <= 57) || iKeyCode === 46)
                return true;
            return false;
        }


        var data_table_language = {
            "decimal": "",
            "emptyTable": "Tabloda veri yok",
            "info": "Toplam <b> _TOTAL_ </b>sonucun<b> _START_ - _END_ </b>arası gösteriliyor.",
            "infoEmpty": "Sonuç yok",
            "infoFiltered": "( _MAX_ girdiden filtrelendi.)", //filtered from _MAX_ total entries
            "infoPostFix": "",
            "thousands": ",",
            "lengthMenu": "Bir sayfada  _MENU_  satır ",
            "loadingRecords": "Yükleniyor...",
            "processing": "Yükleniyor...",
            "search": "Ara:",
            "zeroRecords": "Benzer bir sonuç bulunamadı",
            "paginate": {
                "first": "İlk",
                "last": "Son",
                "next": "Sonraki",
                "previous": "Önceki"
            },
            "aria": {
                "sortAscending": ": a1ctivate to sort column ascending",
                "sortDescending": ": activate to sort column descending"
            }
        };

        var data_table_buttons = [
            {
                "extend": 'copy',
                "text": '<i class="far fa-copy"></i> Kopyala',
                "className": 'btn btn-brand'
            },
            {
                "extend": 'excel',
                "text": '<i class="fas fa-file-excel"></i> Excel',
                "className": 'btn btn-success'
            },
            {
                "extend": 'csv',
                "text": '<i class="fas fa-file-csv"></i> CSV',
                "className": 'btn btn-danger',
                "exportOptions": {
                    columns: [0, 1,2]
                }
            },
        ];

        $(document).ready(function () {
            var table = $('#tabtab').DataTable({
                dom: 'lBfrtip',
                pageLength: 10,
                colReorder: true,
                language: data_table_language,
                buttons: data_table_buttons,
            });
        });

    </script>

    <script type="text/javascript">
        function EditCustomer(val) {

            $.ajax({
                url: '/Ajax/GetCustomers',
                type: 'GET',
                data: { jsonData: val },
                dataType: 'json',
                success: function (response) {
                    if (response != null) {
                        $('#fullname').val(response.CustomerName);
                        $('#phone').val(response.CustomerPhone);
                        $('#birthdate').val(response.Date).change();
                        $('#customerid').val(response.CustomerId);
                    }
                }
            });
        };
    </script>
}