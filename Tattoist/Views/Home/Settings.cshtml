@model TattoistDAL.Models.DTO.SettingsVM

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="kt-portlet kt-portlet--last kt-portlet--head-lg kt-portlet--responsive-mobile" id="kt_page_portlet">
                @using (Html.BeginForm("Settings", "Home"))
                {
                    <div class="kt-portlet__head kt-portlet__head--lg" style="">
                        <div class="kt-portlet__head-label d-flex">
                            <span class="kt-portlet__head-icon">
                                <i class="kt-font-brand flaticon2-calendar-2"></i>
                            </span>
                            <h3 class="kt-portlet__head-title">
                                Uygulama Ayarları
                            </h3>
                        </div>
                        <div class="kt-portlet__head-toolbar">
                            <a href="/Home/HomePage" class="btn btn-clean kt-margin-r-10">
                                <i class="la la-arrow-left"></i>
                                <span class="kt-hidden-mobile">Geri Dön</span>
                            </a>
                            <div class="btn-group">
                                <button type="submit" class="btn btn-brand" name="userid" id="userid" value="">
                                    <i class="flaticon2-add"></i>
                                    <span class="kt-hidden-mobile">Kaydet</span>
                                </button>
                            </div>
                        </div>

                    </div><br />
                    if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger justify-content-center" role="alert">
                            <strong>HATA!</strong>&nbsp; @TempData["Error"]
                        </div>
                    }
                    if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success justify-content-center" role="alert">
                            <strong>BAŞARILI!</strong>&nbsp; @TempData["Success"]
                        </div>
                    }

                    <div style="margin-left:15px" class="row">
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Kredi Kartı Ek Vergi</b></p>
                            @Html.TextBoxFor(x => x.CreditCardTax, new { @class = "form-control" })
                        </div>
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>KDV</b></p>
                            @Html.TextBoxFor(x => x.KDV, new { @class = "form-control" })
                        </div>
                    </div><br />
                    <div style="margin-left:15px" class="row">
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Müşteri Doğum Günü Mesaj İçeriği</b></p>
                            @Html.TextBoxFor(x => x.BirthdayText, new { @class = "form-control" })
                        </div>
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Randevu Mesaj İçeriği</b></p>
                            @Html.TextBoxFor(x => x.AppointmentText, new { @class = "form-control" })
                        </div>
                    </div><br />
                    <div style="margin-left:15px" class="row">
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Doğum Günü SMS Saati</b></p>
                            @Html.TextBoxFor(x => x.BirthdayScheduling, new { @class = "form-control" })
                        </div>
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>Randevu SMS Saati</b></p>
                            @Html.TextBoxFor(x => x.AppointmentScheduling, new { @class = "form-control" })
                        </div>

                    </div><br />
                    <div style="margin-left:15px" class="row">
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>SMS Kullanıcı Adı</b></p>
                            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                        </div>
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>sms Parola</b></p>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                        </div>

                    </div><br />
                    <div style="margin-left:15px" class="row">
                        <div style="margin-left:15px;" class="col-md-5">
                            <p><b>SMS Gönderici</b></p>
                            @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
                        </div>
                    </div><br />
                }
            </div>
        </div>
    </div>

</div>
